<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Security Tester" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Key"
        android:id="@+id/keyEnter"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="76dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decrypt"
        android:id="@+id/decryptor"
        android:layout_alignTop="@+id/keyEnter"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="62dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Key Entered"
        android:id="@+id/myKey"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/keyEnter"
        android:layout_alignEnd="@+id/keyEnter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Key Decrypted"
        android:id="@+id/decryptedKey"
        android:layout_alignBottom="@+id/myKey"
        android:layout_alignEnd="@+id/decryptor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OAD Status"
        android:id="@+id/oadStatus"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="131dp"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Decrypted"
        android:id="@+id/keyDecrypted"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>